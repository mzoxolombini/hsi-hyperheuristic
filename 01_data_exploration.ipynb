# Jupyter Notebook for data exploration
# This would be a .ipynb file, showing here as Python code for reference

"""
# Hyper-Heuristic Framework - Data Exploration Notebook

## 1. Setup and Imports
"""

import sys
sys.path.append('../src')

import numpy as np
import matplotlib.pyplot as plt
from config.config_loader import ConfigLoader
from data.dataset_loader import DatasetManager

"""
## 2. Load Configuration
"""

config = ConfigLoader.load_config()
dataset_manager = DatasetManager(config.__dict__)

"""
## 3. Load and Explore Dataset
"""

# Load Indian Pines dataset
dataset = dataset_manager.load_dataset('Indian_Pines', mode='train')

# Get dataset information
info = dataset_manager.get_dataset_info('Indian_Pines')
print("Dataset Info:", info)

# Get sample data
sample_data, sample_gt = dataset.get_full_image()
print(f"Data shape: {sample_data.shape}")
print(f"Ground truth shape: {sample_gt.shape}")

"""
## 4. Visualize Data
"""

# Plot RGB composite
rgb = sample_data[:, :, [29, 19, 9]]  # Common HSI RGB bands
rgb = (rgb - rgb.min()) / (rgb.max() - rgb.min())

fig, axes = plt.subplots(1, 3, figsize=(15, 5))
axes[0].imshow(rgb)
axes[0].set_title('RGB Composite')
axes[0].axis('off')

axes[1].imshow(np.mean(sample_data, axis=2), cmap='gray')
axes[1].set_title('Mean Band')
axes[1].axis('off')

axes[2].imshow(sample_gt, cmap='tab20')
axes[2].set_title('Ground Truth')
axes[2].axis('off')

plt.tight_layout()
plt.show()

"""
## 5. Spectral Analysis
"""

# Plot spectral profiles
h, w, b = sample_data.shape
points = [(30, 30), (60, 60), (90, 90)]  # Sample points

plt.figure(figsize=(10, 6))
for (i, j) in points:
    spectrum = sample_data[i, j, :]
    plt.plot(spectrum, label=f'Point ({i},{j})', alpha=0.7)

plt.xlabel('Band Index')
plt.ylabel('Reflectance')
plt.title('Spectral Profiles at Different Points')
plt.legend()
plt.grid(True, alpha=0.3)
plt.show()

"""
## 6. Meta-Feature Extraction
"""

from data.meta_features import MetaFeatureExtractor

# Extract meta-features from a patch
patch = sample_data[30:94, 30:94, :]  # 64x64 patch
extractor = MetaFeatureExtractor()
features = extractor.extract(patch)

print("Meta-features:")
for name, value in features.items():
    print(f"  {name}: {value:.4f}")

"""
## 7. Save Exploration Results
"""

import json
with open('data_exploration_results.json', 'w') as f:
    json.dump({
        'dataset_info': info,
        'sample_points': points,
        'meta_features': features
    }, f, indent=2)

print("Data exploration completed!")
